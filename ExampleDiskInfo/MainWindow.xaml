<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:app="clr-namespace:ExampleDiskInfo"
        xmlns:converters="clr-namespace:ExampleDiskInfo.Converters"
        xmlns:models="clr-namespace:ExampleDiskInfo.Models"
        mc:Ignorable="d"
        x:Class="ExampleDiskInfo.MainWindow"
        Title="DiskInfo"
        Width="640"
        Height="720"
        ResizeMode="CanMinimize">

    <!-- TODO -->

    <Window.Resources>
        <converters:DriveLetterConverter x:Key="DriveLetterConverter" />
    </Window.Resources>

    <Window.DataContext>
        <app:MainWindowViewModel />
    </Window.DataContext>

    <TabControl ItemsSource="{Binding Disks}">
        <TabControl.ItemTemplate>
            <DataTemplate DataType="{x:Type models:DiskInfoModel}">
                <TextBlock Text="{Binding Disk, Converter={StaticResource DriveLetterConverter}}" />
            </DataTemplate>
        </TabControl.ItemTemplate>
        <TabControl.ContentTemplate>
            <DataTemplate DataType="{x:Type models:DiskInfoModel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Content="Model" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               Text="{Binding Disk.Model}" />
                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Content="Firmware" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               Text="{Binding Disk.FirmwareRevision}" />
                    <Label Grid.Row="2"
                           Grid.Column="0"
                           Content="Serial" />
                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               Text="{Binding Disk.SerialNumber}" />
                    <Label Grid.Row="3"
                           Grid.Column="0"
                           Content="BusType" />
                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               Text="{Binding Disk.BusType}" />
                    <Label Grid.Row="4"
                           Grid.Column="0"
                           Content="Size" />
                    <TextBlock Grid.Row="4"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               Text="{Binding Disk.Size}" />
                </Grid>
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>

</Window>
